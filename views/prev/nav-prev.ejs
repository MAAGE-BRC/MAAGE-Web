    background-color: var(--secondary-600);
}

.register-btn:hover {
    background-color: var(--secondary-700);
}

.mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    color: var(--secondary-800);
    font-size: 1.5rem;
    cursor: pointer;
    padding: 0.25rem;
    transition: transform var(--transition-speed) ease;
}

.mobile-menu-toggle:hover {
    transform: scale(1.1);
}

/* Search Flyout */
.search-flyout {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: var(--header-height);
    background-color: white;
    z-index: 1002;
    box-shadow: var(--box-shadow);
    transform: translateY(-100%);
    transition: transform var(--transition-speed) ease;
}

.search-flyout.active {
    transform: translateY(0);
}

.search-container {
    display: flex;
    align-items: center;
    height: 100%;
    padding: 0 1rem;
}

.search-container i {
    color: var(--text-light);
    margin-right: 0.75rem;
}

.search-container input {
    flex: 1;
    height: 100%;
    border: none;
    background: transparent;
    font-size: 1rem;
    color: var(--text-color);
    outline: none;
}

.search-close {
    background: none;
    border: none;
    color: var(--text-light);
    cursor: pointer;
    padding: 0.5rem;
    margin-left: 0.75rem;
}

/* Mobile Menu */
.mobile-menu {
    position: absolute;
    top: var(--header-height);
    left: 0;
    right: 0;
    background-color: white;
    border-top: 1px solid rgba(0, 0, 0, 0.05);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    box-shadow: var(--box-shadow);
    padding: 1rem;
    display: none;
    z-index: 999;
}

.mobile-menu.show {
    display: block;
}

.mobile-section {
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    padding-bottom: 1rem;
    margin-bottom: 1rem;
}

.mobile-section:last-child {
    border-bottom: none;
    margin-bottom: 0;
}

.mobile-section h3 {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--secondary-600);
    margin-bottom: 0.5rem;
}

.mobile-links {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.5rem;
}

.mobile-links a {
    display: block;
    padding: 0.5rem 0.75rem;
    font-size: 0.875rem;
    color: var(--text-color);
    border-radius: 0.375rem;
    transition: background-color var(--transition-speed) ease, color var(--transition-speed) ease;
}

.mobile-links a:hover {
    background-color: var(--primary-50);
    color: var(--primary-700);
}

.mobile-buttons {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 1rem;
}

.mobile-login, .mobile-register {
    display: block;
    text-align: center;
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    padding: 0.75rem 1rem;
    border-radius: var(--border-radius);
    transition: all var(--transition-speed) ease;
}

.mobile-login {
    color: var(--secondary-800);
    border: 1px solid var(--secondary-200);
    background-color: white;
}

.mobile-register {
    color: white;
    background-color: var(--secondary-600);
}

/* Media Queries */
@media (max-width: 768px) {
    .nav-items {
        display: none;
    }

    .mobile-menu-toggle {
        display: block;
    }

    .login-btn, .register-btn {
        display: none;
    }
}

@media (max-width: 640px) {
    .dropdown-content {
        left: 0;
        min-width: 100vw;
        border-radius: 0;
    }

    .mobile-links {
        grid-template-columns: 1fr;
    }
}

    background: none;
    border: none;
    color: var(--text-light);
    cursor: pointer;
    transition: background-color var(--transition-speed) ease;
}

.search-icon:hover {
    background-color: rgba(0, 0, 0, 0.05);
}

.login-btn, .register-btn {

      align-items: center;
      gap: 0.375rem;
      font-weight: 500;
      color: var(--maage-secondary-800);
      transition: color 0.2s;
      padding: 0.5rem 0;
      height: 100%;
    }

    .maage-nav-link:hover {
      color: var(--maage-secondary-900);
    }

    .maage-dropdown-icon {
      width: 1rem;
      height: 1rem;
      transition: transform 0.2s;
    }

    .maage-nav-item.active .maage-dropdown-icon {
      transform: rotate(180deg);
    }

    .maage-dropdown-content {
      position: absolute;
      top: 100%;
      left: 0;
      z-index: 50;
      min-width: 280px;
      background-color: white;
      border-radius: 0.5rem;
      box-shadow: 0 10px 15px -3px var(--maage-shadow-lg), 0 4px 6px -4px var(--maage-shadow);
      padding: 1rem;
      display: none;
      opacity: 0;
      transform: translateY(10px);
      transition: opacity 0.2s, transform 0.2s;
    }

    .maage-dropdown-content.two-columns {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
      min-width: 560px;
      left: -25%;
    }

    .maage-dropdown-content.three-columns {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1rem;
      min-width: 800px;
      left: -50%;
    }

    .maage-nav-item.active .maage-dropdown-content {
      display: block;
      opacity: 1;
      transform: translateY(0);
    }

    .maage-nav-item.active .maage-dropdown-content.two-columns {
      display: grid;
    }

    .maage-nav-item.active .maage-dropdown-content.three-columns {
      display: grid;
    }

    @media (max-width: 768px) {
      .maage-dropdown-content,
      .maage-dropdown-content.two-columns,
      .maage-dropdown-content.three-columns {
        position: static;
        width: 100%;
        min-width: auto;
        box-shadow: none;
        border-radius: 0;
        padding: 0.5rem 0 0.5rem 1rem;
        margin-top: 0.5rem;
        display: none;
        grid-template-columns: 1fr;
      }

      .maage-nav-item.active .maage-dropdown-content,
      .maage-nav-item.active .maage-dropdown-content.two-columns,
      .maage-nav-item.active .maage-dropdown-content.three-columns {
